@model TDDTestingMVC.Data.Cliente

<h1 class="text-center my-4">Editar Cliente</h1>

<div class="container">
    <form asp-action="Edit">
        <input type="hidden" asp-for="Codigo" />

        <div class="mb-3">
            <label asp-for="Cedula" class="form-label">Cédula</label>
            <input type="text" class="form-control" asp-for="Cedula" required />
            <span asp-validation-for="Cedula" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Nombres" class="form-label">Nombre</label>
            <input type="text" class="form-control" asp-for="Nombres" required />
            <span asp-validation-for="Nombres" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Apellidos" class="form-label">Apellidos</label>
            <input type="text" class="form-control" asp-for="Apellidos" required />
            <span asp-validation-for="Apellidos" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="FechaNacimiento" class="form-label">Fecha de Nacimiento</label>
            <input type="date" class="form-control" asp-for="FechaNacimiento" required />
            <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Mail" class="form-label">Correo</label>
            <input type="email" class="form-control" asp-for="Mail" required />
            <span asp-validation-for="Mail" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Telefono" class="form-label">Teléfono</label>
            <input type="tel" class="form-control" asp-for="Telefono" required />
            <span asp-validation-for="Telefono" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Direccion" class="form-label">Dirección</label>
            <textarea class="form-control" asp-for="Direccion" rows="3" required></textarea>
            <span asp-validation-for="Direccion" class="text-danger"></span>
        </div>

        <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" asp-for="Estado" />
            <label class="form-check-label" asp-for="Estado">Estado</label>
        </div>

        <button type="submit" class="btn btn-success" id="btnGuardar">Guardar Cambios</button>
    </form>
</div>

<div class="mt-3">
    <a class="btn btn-secondary" href="@Url.Action("Index")">Volver a la lista</a>
</div>
