@model TDDTestingMVC.Data.Cliente

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center my-4">Formulario de Registro de Cliente</h1>

<div class="container">
    <form asp-action="Create" method="post">
        <div class="row">
            @* <div class="col-md-6 mb-3"> *@
            @*     <label asp-for="Codigo" class="form-label">Código</label> *@
            @*     <input type="number" class="form-control" asp-for="Codigo" placeholder="Ingresa el código del cliente" required> *@
            @*     <span asp-validation-for="Codigo" class="text-danger"></span> *@
            @* </div> *@
            <div class="col-md-6 mb-3">
                <label asp-for="Cedula" class="form-label">Cédula</label>
                <input type="text" class="form-control" asp-for="Cedula" placeholder="Ingresa la cédula del cliente" required>
                <span asp-validation-for="Cedula" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Nombres" class="form-label">Nombres</label>
            <input type="text" class="form-control" asp-for="Nombres" placeholder="Ingresa los nombres del cliente" required>
            <span asp-validation-for="Nombres" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Apellidos" class="form-label">Apellidos</label>
            <input type="text" class="form-control" asp-for="Apellidos" placeholder="Ingresa los apellidos del cliente" required>
            <span asp-validation-for="Apellidos" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="FechaNacimiento" class="form-label">Fecha de Nacimiento</label>
            <input type="date" class="form-control" asp-for="FechaNacimiento" required>
            <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Mail" class="form-label">Correo Electrónico</label>
            <input type="email" class="form-control" asp-for="Mail" placeholder="Ingresa el correo electrónico" required>
            <span asp-validation-for="Mail" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Telefono" class="form-label">Teléfono</label>
            <input type="tel" class="form-control" asp-for="Telefono" placeholder="Ingresa el teléfono del cliente" required>
            <span asp-validation-for="Telefono" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Direccion" class="form-label">Dirección</label>
            <textarea class="form-control" asp-for="Direccion" rows="3" placeholder="Ingresa la dirección del cliente" ></textarea>
            <span asp-validation-for="Direccion" class="text-danger"></span>
        </div>

        <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" asp-for="Estado">
            <label class="form-check-label" asp-for="Estado">Estado (Activo)</label>
        </div>

        <button type="submit" class="btn btn-primary" id="btnSubmit">Registrar Cliente</button>
    </form>
</div>

<div class="mt-3">
    <a class="btn btn-secondary" href="@Url.Action("Index")">Volver a la lista</a>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
